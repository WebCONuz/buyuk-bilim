<!-- COURSES SECTION -->
<section id="coursePage">
    <div class="container py-5">
        <div class="row">

            <div class="col-lg-12 text-center title-text">
                <h2 class="text-capitalize title-h2">Mavjud barcha kurslar</h2>
            </div>
            
            <div class="col-md-12 d-flex flex-wrap">
                {{#if courses}}
                    {{#each courses}}
                        <div class="card">
                            <img src="{{url}}{{courseImg}}" alt="course-1" class="w-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-clock-history"></i> &nbsp;<span>{{duration}} oy</span></span>
                                    <span><i class="bi bi-star-fill"></i> {{star}}</span>
                                </div>
                                <h3 class="mb-4 mt-2">{{title}}</h3>
                                <div class="name d-flex align-items-center flex-wrap">
                                    <h6 class="mb-0 text-danger">Mentor: </h6>
                                    <span class="ms-3 fw-bold">{{mentor}}</span>
                                </div>  
                                <div class="name d-flex align-items-center flex-wrap">
                                    <h6 class="mb-0 text-danger">Type: </h6>
                                    <span class="ms-3 fw-bold">{{type}}</span>
                                </div>  
                                <div class="name d-flex align-items-center flex-wrap">
                                    <h6 class="mb-0 text-danger">Price: </h6>
                                    <span class="ms-3 fw-bold">{{price}} so'm</span>
                                </div>                          
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="{{url}}{{_id}}" class="btn btn-primary">Kursni yangilash</a>
                                    <form action="/courses/{{_id}}/delete" method="POST">
                                        <button type="submit" class="btn btn-outline-danger">O'chirish</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h1 class="text-danger text-center w-100 py-5">Hali offline kurslar kiritilmadi!</h1>
                {{/if}}
            </div>
        </div>
    </div>
</section>