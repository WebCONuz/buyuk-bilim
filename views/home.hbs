</section>

<!-- COURSE SECTION -->
<section id="course" class="py-4 pb-md-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-12 text-center title-text">
                <h2 class="display-6 text-capitalize title-h2">Kurslarimiz</h2>
                <p class="mb-0">Quyida siz bizning ba'zi kurslarimiz bilan tanishishingiz mumkin</p>
                <div class="line"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- carousel services -->
                <div class="owl-carousel text-center">

                    {{#if courses}}
                    {{#each courses}}
                    <div class="card mx-2 course-card">
                        <div class="card-top-img">
                            <img src="{{url}}{{courseImg}}" class="img-fluid w-100" alt="course-img1" />
                        </div>
                        <div class="card-body p-4">
                            <h4 class="mb-0">{{title}}</h4>
                            <div class="course-text-info d-flex align-items-center my-4 justify-content-between">
                                <span><i class="bi bi-alarm text-danger"></i> &nbsp;{{duration}} Month</span>
                                <span><i class="bi bi-wallet2 text-danger"></i> &nbsp;{{price}}</span>
                            </div>
                            <p class="mb-0">
                                Kursga hoziroq ro'yxatdan o'ting: <a href="{{url}}auth/register">Ro'yxatdan o'tish</a>
                            </p>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}

                </div>
                <!-- carousel services -->
            </div>
        </div>
    </div>
</section>

