<!-- LOGIN SECTION  -->
<section id="signup" class="login">
    <div class="container">
        <div class="row pb-4">
            <div class="col-lg-12 text-center title-text">
                <h2 class="display-6 text-capitalize title-h2">Tizimga kirish</h2>
                <p class="mb-0">Tizimga faqat ruxsati bor shaxslar kirishi mumkin:</p>
            </div>
        </div>
        <div class="row">
            <form action="/admin/login" method="POST">
                <div class="col-md-6 offset-md-3">
                    {{#if loginError}}
                        <div class="alert alert-danger" role="alert">{{loginError}}</div>
                    {{/if}}
                    <div class="form-area d-flex flex-column">
                        <input type="email" placeholder="email" class="mb-4" name="email">
                        <input type="password" placeholder="password" class="mb-4" name="password">
                        <button type="submit">Kirish</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>