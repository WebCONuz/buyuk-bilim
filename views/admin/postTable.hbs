<section id="descr">
    <div class="container py-5">
        <div class="row pb-4">
            <div class="col-lg-12 text-center title-text">
                <h2 class="display-6 text-capitalize title-h2">Saytda fikr bildirganlar</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{#if posts}}
                    <table class="table table-bordered">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Tell Number</th>
                            <th scope="col">O'chirish</th>
                        </tr>
                        {{#each posts}}
                            <tr>
                                <th>{{inc @index}}</th>
                                <td class="text-capitalize">{{username}}</td>
                                <td>{{descr}}</td>
                                <td>{{phone}}</td>
                                <td>
                                    <form action="/admin/post/delete/{{_id}}" method="post">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </table>
                {{else}}
                    <h3 class="py-5 text-center text-danger">Hali hech kim fikr bildirmadi...</h3>
                {{/if}}
                </div>
            </div>
        </div>
    </section>