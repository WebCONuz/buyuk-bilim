<!-- USERS TABLE SECTION -->
<section id="table">
    <div class="container py-5">
        <div class="row pb-4">
            <div class="col-lg-12 text-center title-text">
                <h2 class="display-6 text-capitalize title-h2">Kursga ro'yxatdan o'tganlar</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{#if users}}  
                    <table class="table table-bordered">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Tell Number</th>
                            <th scope="col">Sana</th>
                            <th scope="col">O'chirish</th>
                        </tr>
                        {{#each users}}
                            <tr>
                                <th>{{inc @index}}</th>
                                <td class="text-capitalize">{{username}}</td>
                                <td class="text-capitalize">{{subject}}</td>
                                <td>{{phone}}</td>
                                <td>{{formatDate createdAt}}</td>
                                <td>
                                    <form action="/admin/user/delete/{{_id}}" method="post">
                                        <button type="delete" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </table>
                {{else}}
                    <h3 class="py-5 text-center text-danger">Hali kurslar uchun foydalanuvchilar ro'yxatdan o'tmagan</h3>
                {{/if}}
            </div>
        </div>
    </div>
</section>